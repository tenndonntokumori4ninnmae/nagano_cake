<div class="container"> 
  <div>
    <h3 class="mt-3">ジャンル一覧・追加</h3>
      <%=form_with model: @genre,url: admin_genres_path,method: :post,local:true do |f|%>
      <div class="form-group">
       <%=f.text_field:name,class: "form-control"%>
       <%=f.submit '新規登録',class: "mt-3 new-btn btn btn-success"%>
      </div>
      <%end%>
  </div>
  
  <div class="table">
    <table>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre|%>
          <tr>
            <td><%=genre.name%></td>
            <td><%=link_to edit_admin_genre_path(genre.id) do%>
              <p class="new-btn btn btn-success">編集する</p>
              <%end%>
            </td><br>
          <tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>