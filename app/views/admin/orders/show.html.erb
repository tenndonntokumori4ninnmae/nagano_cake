<h1>注文履歴詳細</h1>
<table>
    <tr>
        <td>購入者</td>
        <td><%= @order.customer.name %></td>
    </tr>
    <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%k')</td>
    </tr>
    <tr>
        <td>配送先</td>
        <td><%= @order.adress %></td>
    </tr>
    <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
    </tr>
    <tr>
        <%= form_with model: @order, url: admin_order_path(@order.id), method: patch, local: true do |f| %>
            <td>注文ステータス</td>
            <td><%= f.select :status, [['入金待ち', 0], ['入金確認', 1], ['製作中', 2], ['発送準備中', 3], ['発送済み', 4]], { include_blank: 0, selected: 0} %></td>
            <td><%= f.submit "更新" %></td>
        <% end %>
    </tr>
</table>

<table>
    <thead>
        <tr>
            <td>商品名</td>
            <td>単価（税込み）</td>
            <td>数量</td>
            <td>小計</td>
            <td>製作ステータス</td>
        </tr>
    </thead>
    <tbody>
        <% @ordered_items.each do |ordered_item| %>
        <tr>
            <td><%= ordered_item.name %></td>
            <td><%= ordered_item.item.add_tax_price %></td>
            <td><%= ordered_item.item.amount %></td>
            <td><%= ordered_item.item.add_tax_price * ordered_item.item.amount %></td>
            <td></td>
        </tr>
        <% end %>
    </tbody>
</table>
