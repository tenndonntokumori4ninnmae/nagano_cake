<h1>注文履歴詳細</h1>
<table>
    <tr>
        <td>購入者</td>
        <td><%= @order.customer.family_name %></td>
    </tr>
    <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
        <td>配送先</td>
        <td><%= @order.address %></td>
    </tr>
    <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
        <%= form_with model: @order, url: admin_order_path, local: true do |f| %>
            <td>注文ステータス</td>
            <td><%= f.select :status, [['入金待ち', 'wait'], ['入金確認', 'confirm'], ['製作中', 'crafting'], ['発送準備中', 'preparation'], ['発送済み', 'complete']], { include_blank: false, selected: @order.status} %></td>
            <td><%= f.submit "更新" %></td>
        <% end %>
    </tr>
</table>

<table>
    <thead>
        <tr>
            <td>商品名</td>
            <td>単価（税込み）</td>
            <td>数量</td>
            <td>小計</td>
            <td>製作ステータス</td>
        </tr>
    </thead>
    <tbody>
        <% @ordered_items.each do |ordered_item| %>
        <tr>
            <td><%= ordered_item.item.name %></td>
            <td><%= ordered_item.item.add_tax_price %></td>
            <td><%= ordered_item.amount %></td>
            <td><%= ordered_item.item.add_tax_price * ordered_item.amount %></td>
            <td>
                <%= form_with model: ordered_item, url: admin_ordered_item_path, local: true do |f| %>
                    <%= f.select :status, [['着手不可', 'no'], ['製作待ち', 'craft_wait'],['製作中', 'in_crafting'],['製作完了', 'complete']], { include_blank: false, selected: ordered_item.status} %>
                    <%= f.submit "更新" %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<table>
    <tr>
        <td>商品合計</td>
        <td>
            <% items_price = 0 %>
            <% @ordered_items.each do |ordered_item| %>
            <% items_price += ordered_item.item.add_tax_price * ordered_item.amount %>
            <% end %>
            <%= items_price %>
        </td>
    </tr>
    <tr>
        <td>送料</td>
        <td><%= @order.postage %></td>
    </tr>
    <tr>
        <td>請求金額合計</td>
        <td><%= @order.total_price %></td>
    </tr>
</table>