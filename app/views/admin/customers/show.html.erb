<div class="table container">
    <h2 class="mt-3"><%=@customer.family_name%><%=@customer.first_name%>さんの会員詳細</h2>
    
    <table>
        <tr>
            <th>会員ID</th>
            <td><%=@customer.id%></td>
        </tr>
        <tr>
            <th>氏名</th>
            <td><%=@customer.family_name%><%=@customer.first_name%></td>
        </tr>
        <tr>
            <th>フリガナ</th>
            <td><%=@customer.family_name_kana%><%=@customer.first_name_kana%></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%=@customer.postcode%></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%=@customer.address%></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%=@customer.phonenumber%></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%=@customer.email%></td>
        </tr>
        <tr>
            <th>会員ステータス</th>
            <td><%if @customer.is_deleted == true%>
                    <p>退会</p>
                <%else%>
                    <p>有効</p>
                <%end%>
            </td>
        </tr>
    </table>
    
    <div>
        <%=link_to edit_admin_customer_path(@customer) do%>
        <p class="new-btn btn btn-success">編集する</p>
        <%end%>
    </div>
</div>