<h2>注文情報確認</h2>

<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    
    <%total_price=0%>
    <%current_customer.cart_items.each do |cart_item|%>
      <tbody>
          <td>
            <%=image_tag cart_item.item.get_image, size: "30x30" %>
            <%=cart_item.item.name%>
          </td>
          <td>
            <%=cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td>
              <%=cart_item.amount%>
          </td>
          <td>
            <%=cart_item.subtotal.to_s(:delimited) %>
          </td>
      </tbody>
      <%total_price +=cart_item.subtotal %>
    <%end%>
</table>


<table>
    <tr>
        <th>送料</th>
        <td><%=@order.postage%></td>
    </tr>
    <tr>
        <th>商品合計</th>
        <td><%=total_price.to_s(:delimited)%></td>
    </tr>
    <tr>
        <th>請求金額</th>
        <td><%all_price = @order.postage + total_price%>
            <%=all_price.to_s(:delimited)%>
        </td>
    </tr>
</table>

