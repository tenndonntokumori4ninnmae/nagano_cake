<%= form_with model: @order, url: confirm_path, method: :post, local: true do |f| %>
  <h2>支払方法</h2>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
  <h2>お届け先</h2>

  <p>ご自身の住所<%= f.radio_button :address_id, "0" %></p>
  <%="#{current_customer.postcode}#{current_customer.address}"%><br>
  <%="#{current_customer.family_name}"%><%="#{current_customer.first_name}"%>
  <p>登録済み住所から選択 <%= f.radio_button :address_id, "1" %></p>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  <p>新しいお届け先<%= f.radio_button :address_id, "2" %></p>
  <p>郵便番号（ハイフンなし）
   <%= f.text_field :postal_code %>
  </p>
  <p>住所
    <%= f.text_field :address %>
  </p>
  <p>宛名
    <%= f.text_field :name %>
  <p>
  <%= f.submit"確認画面へ進む" %>
<% end %>