<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
  </thead>
  <tbody>
    <% @ordered_items.each do |ordered_item| %>
    <tr>
      <td><%= ordered_item.created_at.strftime('%Y/%m/%k') %></td>
      <td><%= ordered_item.order.adress %></td>
      <td><%= ordered_item.item.name %></td>
      <td><%= ordered_item.order.total_price %></td>
      <td><%= ordered_item.order.status %></td>
      <td><%= link_to '詳細', ordered_item_path(ordered_item.id) %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>