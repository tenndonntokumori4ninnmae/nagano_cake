
<div class="col-md-8 offset-md-1">
  <div class="row mt-3 justify-content-center">
    <div class="col-7">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-5">
      <%=link_to all_destroy_path,method: :delete do%>
       <p class="btn btn-danger">カートを空にする</p>
      <%end%>
    </div>
     <table class="table table-hover table-inverse">
      <thead>
        <tr>
           <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
      </thead>
      <tbody>
           <%total_price=0%>
    <%@cart_items.each do |cart_item|%>
      <tbody>
          <td>
            <%=image_tag cart_item.item.get_image, size: "30x30" %>
            <%=cart_item.item.name%>
          </td>
          <td>
            <%=cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td>
            <%=form_with model: cart_item,url: cart_item_path(cart_item),method: :patch,local:true do |f|%>
                <%=f.select:amount,*[1..30]%>
                <%=f.submit "変更", class: "btn btn-primary"%>
              <%end%>
          </td>
          <td>
            <%=cart_item.subtotal.to_s(:delimited) %>
          </td>
          <td>
            <%=link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger"	%>
          </td>
          <%total_price +=cart_item.subtotal %>
      </tbody>
      </table>
</div>
<div class="row justify-content-center">
    <div class="col-1">
    </div>
    <div class="col-5">
      <%=link_to "買い物を続ける",root_path, class: "btn btn-primary"%>
    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <th>合計金額</th>
          <td><%=total_price.to_s(:delimited)%>円
          </td>
        </tr>
      </table>
    </div>
  </div>
 <%end%>
</div>
<div class="row">
  <div class="col-4">
  </div>
  <div class="col-4">
    <%=link_to "情報入力に進む", new_order_path, class: "btn btn-success"%>
  </div>
</div>
