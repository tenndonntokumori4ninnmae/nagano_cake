<h2>ショッピングカート</h2>

<%=link_to "カートを空にする",all_destroy_path,method: :delete%>

<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
    </thead>

    <%total_price=0%>
    <%@cart_items.each do |cart_item|%>
      <tbody>
          <td>
            <%=image_tag cart_item.item.get_image, size: "30x30" %>
            <%=cart_item.item.name%>
          </td>
          <td>
            <%=cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td>

          </td>
          <td>
            <%=cart_item.subtotal.to_s(:delimited) %>
          </td>
          <td>
            <%=link_to "削除する",cart_item_path(cart_item),method: :delete%>
          </td>
      </tbody>
      <%total_price +=cart_item.subtotal %>
    <%end%>
</table>

<%=link_to "買い物を続ける",items_path%>

<table>
  <tr>
    <th>合計金額</th>
    <td><%=total_price.to_s(:delimited)%>
    </td>
  </tr>
</table>

<%=link_to "情報入力画面に進む",new_order_path%>