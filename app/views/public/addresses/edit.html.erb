<div class="container justify-content-center">
  <h1>配送先編集</h1>
    <div class="row justify-content-center">
      <%= form_with model: @address do |f| %>
        <div class="form-group">
          <label>郵便番号（ハイフンなし）</label>
          <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder:"郵便番号", class: "form-control" %>
        </div>
        <div class="form-group">
          <label>住所</label>
          <%= f.text_area :address, autofocus: true, id:"inputAddress", placeholder:"住所", class: "form-control" %>
        </div>
        <div class="form-group">
          <label>宛名</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"宛名", class: "form-control" %>
        </div>
      <%= f.submit '変更を保存する', class: "btn btn-success" %>
      <% end %>
    </div>
</div>