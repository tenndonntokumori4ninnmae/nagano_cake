<h1>配送先登録/一覧</h1>
<%= form_with model: @address, url: '/addresses', method: :post do |f| %>
  <label>郵便番号（ハイフンなし）</label>
  <%= f.text_field :postal_code %><br>
  <label>住所</label>
  <%= f.text_area :address %><br>
  <label>宛名</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<% @addresses.each do |address| %>
<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集", edit_address_path(address.id) %>・<%= link_to "削除", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
</table>

<% end %>


